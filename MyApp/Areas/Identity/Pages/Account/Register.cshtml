@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-white p-0 border-0">
                <!-- Zakładki nawigacyjne -->
                <ul class="nav nav-tabs nav-fill" role="tablist">
                    <li class="nav-item">
                        <!-- Link do Logowania (nieaktywny wizualnie) -->
                        <a class="nav-link text-muted py-3" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Logowanie</a>
                    </li>
                    <li class="nav-item">
                        <!-- aktywna zakladka dla rejestracji -->
                        <a class="nav-link active fw-bold py-3 text-primary" href="#">Rejestracja</a>
                    </li>
                </ul>
            </div>

            <div class="card-body p-4">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h3 class="text-center mb-4 text-dark">Załóż nowe konto</h3>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <!-- email -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <!--haslo -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password">Hasło</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <!--potwierdzenie hasla -->
                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword">Potwierdź hasło</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg">Zarejestruj się</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
