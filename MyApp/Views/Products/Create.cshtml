@model MyApp.Models.Product

@{
    ViewData["Title"] = "Nowy Produkt";
}

<div class="container mt-4">
    <h2>Dodaj Nowy Produkt</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nazwa produktu *</label>
            <input asp-for="Name" class="form-control" placeholder="np. Laptop Dell, Młotek, Harry Potter" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Opis</label>
            <textarea asp-for="Description" class="form-control" rows="3"
                      placeholder="Opcjonalny opis produktu..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">Cena *</label>
            <input asp-for="Price" class="form-control" type="number" step="0.01" required />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ShelfId" class="form-label">Regał *</label>
            <select asp-for="ShelfId" asp-items="ViewBag.Shelves" class="form-select" required>
                <option value="">-- Wybierz regał --</option>
            </select>
            <span asp-validation-for="ShelfId" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Dodaj Produkt</button>
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
