@model MyApp.Models.Product

@{
    ViewData["Title"] = "Usuń Produkt";
}

<div class="container mt-4">
    <h2 class="text-danger">Usuń Produkt</h2>

    <div class="alert alert-warning">
        <h4>Czy na pewno chcesz usunąć ten produkt?</h4>
        <p>Ta operacja jest nieodwracalna!</p>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nazwa:</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Opis:</dt>
                <dd class="col-sm-9">@(Model.Description ?? "Brak")</dd>

                <dt class="col-sm-3">Cena:</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Regał:</dt>
                <dd class="col-sm-9">@Model.Shelf?.Name</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Tak, usuń produkt</button>
        <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
    </form>
</div>
