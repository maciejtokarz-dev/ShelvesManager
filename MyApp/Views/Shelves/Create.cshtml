@model MyApp.Models.Shelf

@{
    ViewData["Title"] = "Nowy Regał";
}

<div class="container mt-4">
    <div asp-validation-summary="All" class="text-danger"></div>
    <h2>Utwórz Nowy Regał</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Nazwa Regału</label>
            <input asp-for="Name" class="form-control" placeholder="np. Książki, Elektronika, Narzędzia" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Utwórz</button>
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
